---
// --- ZONA DE SERVIDOR (JAVASCRIPT) ---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

// 1. Declaramos la constante con tus datos.
// Fíjate: Corchetes [] para lista, Llaves {} para objetos.
const misProyectos = [
  { 
    titulo: "API de Gestión de Usuarios", 
    descripcion: "Backend construido con Node.js y Express. Maneja autenticación JWT.",
    tags: ["Node.js", "Express", "JWT"]
  },
  { 
    titulo: "E-commerce Scraper", 
    descripcion: "Script en Python para extraer precios de Amazon automáticamente.",
    tags: ["Python", "Selenium", "Pandas"]
  },
  { 
    titulo: "Microservicio de Pagos", 
    descripcion: "Integración con Stripe usando Java Spring Boot.",
    tags: ["Java", "Spring Boot", "Stripe"]
  }
];
---


<Layout titulo="Portafolio de Backend Dev">
  
	<section class="hero">
		<h1>Mis Proyectos Destacados</h1>
		<p>Aquí muestro mis habilidades construyendo APIs y servicios.</p>
	</section>

	<div class="grid-proyectos">
		{misProyectos.map((proyecto) => (
		<Card 
			titulo={proyecto.titulo} 
			descripcion={proyecto.descripcion}
			tags={proyecto.tags}
		/>
		))}
	</div>

</Layout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  /* LA GRILLA MAGICA */
  .grid-proyectos {
    display: grid;
    /* Esto crea columnas automáticas que miden mínimo 300px */
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
    gap: 2rem; /* Espacio entre tarjetas */
  }
</style>